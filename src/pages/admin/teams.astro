---
import AdminLayout from "../../layouts/AdminLayout.astro";
import { TEAMS } from '../../consts/Teams'
import AddTeamModal from "../../components/admin/AddTeamModal.astro";

export const prerender = false

---
<AdminLayout title="Teams">
    <div class="flex h-full ">
        <aside class=" h-full w-1/5 lg:block hidden bg-slate-700">
            <nav>
                <ul>
                    <li>
                        <button data-modal-target="authentication-modal" data-modal-toggle="authentication-modal" class="block text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" type="button">
                            Toggle modal
                        </button>
                        <AddTeamModal client:visible/>
                    </li>
                    <li><input type="text" name="" id="a" placeholder="Bucar..."></li>
                    <li><input type="checkbox" name="" id="">Solo activos</li>
                </ul>
            </nav>
        </aside>
        <section class="max-h-full h-full lg:w-4/5 w-5/5 overflow-auto">
            <nav class="lg:hidden flex">
                <ul class="flex">
                    <li><button class="addTeamBtn">+ AÃ±adir</button></li>
                    <li><input type="text" name="" id="" placeholder="Bucar..."></li>
                    <li><input type="checkbox" name="" id="">Solo activos</li>
                </ul>
            </nav>
            <div class="w-full max-w-full grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4 place-items-center mt-4">
                {
                TEAMS.map((team) => (
                    <article>
                        
                        <h2>{team.name}</h2>
                        
                    </article>
                ))
                }
            </div>
        </section>
    </div>
</AdminLayout>